    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const progressBar = document.getElementById('progress-bar');
            const fixBtn = document.getElementById('fix-btn');
            const restartBtn = document.getElementById('restart-btn');
            const status = document.querySelector('.status');
            
            // Simulate progress
            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.random() * 5;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(interval);
                }
                progressBar.style.width = progress + '%';
            }, 500);
            
            // Fix button handler
            fixBtn.addEventListener('click', function() {
                status.textContent = "Fixing DELTA system...";
                status.classList.add('pulse');
                
                // Simulate fixing process
                setTimeout(() => {
                    status.textContent = "Anti Cheat disabled!";
                    setTimeout(() => {
                        status.textContent = "Verify Teleport disabled!";
                        setTimeout(() => {
                            status.textContent = "Anti Scam disabled!";
                            setTimeout(() => {
                                status.textContent = "DELTA IS NOW WORKING!";
                                status.style.color = "#66ff66";
                                status.classList.remove('pulse');
                            }, 800);
                        }, 800);
                    }, 800);
                }, 1500);
            });
            
            // Restart button handler
            restartBtn.addEventListener('click', function() {
                status.textContent = "Restarting DELTA...";
                status.classList.add('pulse');
                
                // Simulate restart
                setTimeout(() => {
                    progress = 0;
                    progressBar.style.width = '0%';
                    
                    const newInterval = setInterval(() => {
                        progress += Math.random() * 8;
                        if (progress >= 100) {
                            progress = 100;
                            clearInterval(newInterval);
                            status.textContent = "DELTA restart completed!";
                            status.classList.remove('pulse');
                        }
                        progressBar.style.width = progress + '%';
                    }, 300);
                }, 2000);
            });
        });
    </script>
